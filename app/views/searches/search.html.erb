<body>
	<div class="container">
		<div class="row">
			<% if @range == '2' %>
				<h2>Book search for <%= params[:word] %></h2>

					<% if @book.any? %>

							<table class="table">
					  			<thead>
						 			<tr>
						 				<th></th>
						 				<th>Title</th>
						 				<th>Opinion</th>
						 			</tr>
						  		</thead>
						  		<tbody>
					 				<% @book.each do |book| %>
						 				<tr>
						 					<td>
						 						<%= link_to user_path(book.user_id) do %>
						 							<%= attachment_image_tag book.user, :profile_image, format: 'jpeg', size: "50x50", fallback: "no_image.jpg" %>
						 						<% end %>
						 					</td>
						 					<td>
						 					 <%= link_to(book.title,"/books/#{book.id}") %>
						 					</td>
						 					<td>
						 						<%= book.body %>
						 					</td>
						 				</tr>
						 			<% end %>
						 		</tbody>
							</table>

					<% else %>

						<h1><%= '検索結果がありません。'%></h1>

					<% end %>

			<% else %>

				<h2>User search for <%= params[:word] %></h2>

					<% if @user.any? %>

							<table class="table">
						  		<thead>
						 			<tr>
						 				<th>image</th>
						 				<th>name</th>
						 				<th></th>
						 			</tr>
						  		</thead>
						  		<tbody>
					 				<% @user.each do |user| %>
						 				<tr>
						 					<td>
						 						<%= attachment_image_tag user, :profile_image, format: 'jpeg', size: "50x50", fallback: "no_image.jpg" %>
						 					</td>
						 					<td><%= user.name %></td>
						 				</tr>
						 			<% end %>
						 		</tbody>
							</table>

					<% else %>

					<h1><%= '検索結果がありません。'%></h1>

					<% end %>

		    <% end %>
		</div>
	</div>
</body>